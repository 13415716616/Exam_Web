    }
</script>

<div class="row">
    <div class="col">
        <div class="card card-small mb-4">
            <div class="card-header border-bottom">
                <h6 class="m-0">试卷查询</h6>
            </div>
            <div class="card-body p-0 pb-3 text-center">
                <table class="table mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="border-0">试卷名称</th>
                            <th scope="col" class="border-0">编写老师</th>
                            <th scope="col" class="border-0">分值</th>
                            <th scope="col" class="border-0">班级</th>
                            <th scope="col" class="border-0">试卷操作</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if(test!=null)
                        { 
                        @foreach (var t in test)
                        {                    
                            <tr>
                                <td>@t.Test_name</td>
                                <td>@name[a]</td>
                                <td>@t.Mark</td>
                                <td>@t.Test_Class</td>
                                <td>
                                    <a href="/Student/StartTest?id=@t.Test_ID"> <input type="button" class="btn btn-info" value="开始考试" /></a>
                                </td>
                            </tr>a++;
                        }}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


