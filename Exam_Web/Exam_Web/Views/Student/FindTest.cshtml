
@{
    ViewData["Title"] = "FindTest";
    Layout = "~/Views/Shared/Student_Layout.cshtml";
    var test = ViewBag.test as List<Test>;
    var name = ViewBag.teachername as List<string>;
    var a = 0;
}

<script>
    function ttt() {
        var s = "1231,64,65";
