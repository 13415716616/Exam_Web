
@{
    ViewData["Title"] = "Achievement";
    Layout = "~/Views/Shared/Student_Layout.cshtml";
    var A_Test = ViewBag.Test as List<Grade>;
    var Test = ViewBag.Test1 as List<Test>;
    int n =0;
}


<div class="row">
    <div class="col">
        <div class="card card-small mb-4">
            <div class="card-header border-bottom">
                <h6 class="m-0">试卷查询</h6>
            </div>
            <div class="card-body p-0 pb-3 text-center">
                <table class="table mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="border-0">试卷名称</th>

                            <th scope="col" class="border-0">选择题分数</th>
                            <th scope="col" class="border-0">问答题分数</th>
                            <th scope="col" class="border-0">总分</th>
                            <th scope="col" class="border-0">操作</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in A_Test)
                        {
                            <tr>
                                <td>@Test[n].Test_name</td>
                                
                                <td>@i.S_mark</td>
                                <td>@i.A_mark.</td>
                                <td>@i.mark</td>
                                <td>
                                    <a href="AnswerTest?Test_id=@i.Test_id"> <input type="button" class="btn btn-info" value="查看试卷" /></a>
                                </td>
                            </tr>
                            n++; 
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

