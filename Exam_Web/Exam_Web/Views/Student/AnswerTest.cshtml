
@{
    ViewData["Title"] = "AnswerTest";
    Layout = "~/Views/Shared/Student_Layout.cshtml";
    var Test=ViewBag.Test as Test;
    var Select = ViewBag.SelectQuestions as List<SelectQuestions>;
    var i = 0;
    var Answer_select = ViewBag.Answer_Select as List<string>;

}

    <div class="row" style="margin-top:15px">
        <div class="col" onload="aaa()">
            <div class="col-lg-12 mb-4">
                <!-- Sliders & Progress Bars -->
                <div class="card card-small mb-4">
                    <div class="card-header border-bottom">
                        @*<h6 class="m-0">@Test.Test_name</h6>*@
                    </div>
                    <form asp-controller="Student" asp-action="Starttest">
                        <input type="text" value="" name="T_id" style="display:none" />
                        <ul class="list-group list-group-flush">
                            @foreach (var q in Select)
                            {
                                <li class="list-group-item px-3">
                                    <!-- Progress Bars -->
                                    <div class="mb-2">
                                        <table style="margin-left:5%;background-color:white;width:60%">
                                            <tr><td>@(i+1);.@q.Que_name;</td></tr>
                                            @if (Answer_select[i] == "A")
                                            {
                                                <tr><td>&nbsp;&nbsp;&nbsp;<input type="radio" name="@q.Que_ID" value="A" disabled="disabled" checked="checked" />A.@q.First_select.</td></tr>}
                                            else
                                            {
                                                <tr><td>&nbsp;&nbsp;&nbsp;<input type="radio" name="@q.Que_ID" value="A" disabled="disabled"  checked="checked" />A.@q.First_select.</td></tr>}
                                            @if (Answer_select[i] == "B")
                                            {
                                                <tr><td>&nbsp;&nbsp;&nbsp;<input type="radio" name="@q.Que_ID" value="B" disabled="disabled" checked />B.@q.Second_select </td></tr>}
                                            else
                                            {
                                                <tr><td>&nbsp;&nbsp;&nbsp;<input type="radio" name="@q.Que_ID" value="B" disabled="disabled" />B.@q.Second_select </td></tr>}
                                            @if (Answer_select[i] == "C")
                                            {
                                                <tr><td>&nbsp;&nbsp;&nbsp;<input type="radio" name="@q.Que_ID" value="C" disabled="disabled" checked />C.@q.Third_select.</td></tr>}
                                            else
                                            {
                                                <tr><td>&nbsp;&nbsp;&nbsp;<input type="radio" name="@q.Que_ID" value="C" disabled="disabled" />C.@q.Third_select.</td></tr>}
                                            @if (Answer_select[i] == "D")
                                            {
                                                <tr><td>&nbsp;&nbsp;&nbsp;<input type="radio" name="@q.Que_ID" value="D" disabled="disabled"  checked/>D.@q.Fourth_select.</td></tr>}
                                            else
                                            {
                                                <tr><td>&nbsp;&nbsp;&nbsp;<input type="radio" name="@q.Que_ID" value="D" disabled="disabled" />D.@q.Fourth_select.</td></tr>}
                                        </table>
                                    </div>
                                    <!-- / Progress Bars -->
                                </li>
                                <li class="list-group-item px-3" style="margin-left:10%">
                                    <div class="mb-2">
                                        正确答案为：@q.Answer &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        你的答案为：@Answer_select[i]&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        @if (q.Answer.Equals(Answer_select[i]))
                                        {
                                            <a style="color:lightgreen">回答正确&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                                            <a>得分：@q.Que_mark</a>
                                        }
                                        else
                                        {
                                            <a style="color:orangered">回答错误&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                                            <a>得分：@q.Que_mark</a>
                                        }
                                    </div>
                                </li>i++;
                            }
                        </ul>
                        @*<input type="button" class="btn btn-info" style="margin-left:45%;height:38px;width:80px;margin-top:10px;margin-bottom:10px" />*@
                    </form>
                </div>

            </div>
        </div>
    </div>
